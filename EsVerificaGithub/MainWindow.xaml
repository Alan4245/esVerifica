        <Label Content="Anno" HorizontalAlignment="Left" Height="25" Margin="587,169,0,0" VerticalAlignment="Top" Width="110"/>
        <TextBox x:Name="txtAnno" HorizontalAlignment="Left" Height="50" Margin="587,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="110"/>
        <Label Content="Editore" HorizontalAlignment="Left" Height="25" Margin="140,231,0,0" VerticalAlignment="Top" Width="105"/>
